{
  "name": "canvas-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Canvas LMS integration, enabling AI assistants to help students access course materials, assignments, and announcements",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "canvas-mcp": "./dist/index.js",
    "canvas-mcp-http": "./dist/openwebui-server.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 dist/index.js && chmod 755 dist/openwebui-server.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:http": "node dist/openwebui-server.js",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "README.md",
    ".env.example"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "canvas",
    "lms",
    "education",
    "ai",
    "claude"
  ],
  "author": "Canvas MCP Contributors",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@types/node": "^24.7.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3"
  }
}
