{
  "name": "canvas-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Canvas LMS integration, enabling AI assistants to help students access course materials, assignments, and announcements",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "canvas-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    ".env.example"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "canvas",
    "lms",
    "education",
    "ai",
    "claude"
  ],
  "author": "Canvas MCP Contributors",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "@types/node": "^24.7.0",
    "typescript": "^5.9.3"
  }
}
